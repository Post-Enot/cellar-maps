.cm-cellar-map {
    align-items: flex-start;
    flex-grow: 1;
    flex-shrink: 1;
    justify-content: flex-start;
    padding-left: 3px;
    padding-right: 3px;
    padding-top: 3px;
    padding-bottom: 3px;
}

.cm-cellar-map-row {
    align-items: flex-start;
    flex-direction: row;
}

.cm-cellar-map-cell {
    margin-left: 0;
    margin-right: 0;
    margin-top: 0;
    margin-bottom: 0;
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
    width: 20px;
    height: 20px;
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
}

.cm-palette-element {
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-left-color: rgb(35, 35, 35);
    border-right-color: rgb(35, 35, 35);
    border-top-color: rgb(35, 35, 35);
    border-bottom-color: rgb(35, 35, 35);
    flex-grow: 1;
    flex-shrink: 1;
    flex-direction: column;
}

.cm-palette {
    justify-content: flex-start;
    flex-grow: 1;
    margin-bottom: 5px;
    margin-left: 3px;
    margin-right: 3px;
    margin-top: 4px;
}

.cm-palette > .unity-list-view__size-field {
    margin-right: 0;
}

#button-block > .unity-integer-field {
    margin-left: 3px;
    margin-right: 3px;
}

#button-block > .unity-button {
    margin-left: 3px;
    margin-right: 3px;
    align-items: stretch;
}

.cm-selected-cell-type-indicator {
    flex-direction: row;
    padding-left: 5px;
    padding-right: 5px;
    padding-top: 5px;
    padding-bottom: 5px;
}

.cm-selected-cell-type-indicator > .cm-selected-cell-type-indicator__label {
    padding-left: 0;
    padding-right: 2px;
    padding-top: 2px;
    padding-bottom: 2px;
}

.cm-selected-cell-type-indicator > .cm-selected-cell-type-indicator__indicator {
    padding-left: 2px;
    padding-right: 2px;
    padding-top: 1px;
    padding-bottom: 1px;
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    border-left-color: rgb(51, 51, 51);
    border-right-color: rgb(51, 51, 51);
    border-top-color: rgb(51, 51, 51);
    border-bottom-color: rgb(51, 51, 51);
}
